    <footer>
        <div class="container h-100">
            <div class="footer-wrap">
                <div class="row">
                    <div class="nav flex-column footer-nav col-lg-3 justify-content-start" id="v-pills-tab" role="tablist" aria-orientation="vertical">
                        <a class="nav-link" asp-controller="Home" asp-action="Index" role="tab">Home</a>
                        <a class="nav-link" asp-controller="Event" asp-action="Index" role="tab">Events</a>
                        <a class="nav-link" asp-controller="Presentation" asp-action="Index" role="tab">Presentations</a>
                        <a class="nav-link" asp-controller="About" asp-action="Index" role="tab">About us</a>
                        <a class="nav-link" asp-controller="ContactUs" asp-action="Index" role="tab">Contact us</a>
                    </div>

                    <div class="col-lg-9 partner-logo">
                        <div class="row">
                            <div class="col-4 logo-img">
                                <img src="~/assets/images/sumarski.png" alt="" />
                            </div>
                            <div class="col-2 logo-img">
                                <img src="~/assets/images/poljoprivredni.jpg" alt="" />
                            </div>
                            <div class="col-3 logo-img">
                                <img src="~/assets/images/COST logo.jpeg" alt="" />
                            </div>
                            <div class="row">

                                <div class="col-3 logo-img">
                                    <img src="~/assets/images/tmf.png" alt="" />
                                </div>
                                <div class="col-2 logo-img">
                                    <img src="~/assets/images/VTIpng.png" alt="" />
                                </div>
                                <div class="col-2 logo-img">
                                    <img src="~/assets/images/ictmf.jpg" alt="" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </footer>
    <script type="text/javascript" src="/js/jquery.min.js"></script>
    <script type="text/javascript" src="/js/popper.min.js"></script>
    <script type="text/javascript" src="/js/bootstrap.min.js"></script>
</body>
</html>
